@using Buoi_2.Models;
BÀI 2

@model ModelForAction2

@{
    float ketQua = ViewBag.x;
}

<div class="mx-3">
    <form class="row" action="~/Math/Action2">
        <div class="col-6">
            <div class="form-group my-2">
                <label for="Name">Số a</label>
                @Html.TextBoxFor(m => m.a, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.a, "", new { @class = "text-danger" })
            </div>
            <div class="form-group my-2">
                <label for="Name">Số b</label>
                @Html.TextBoxFor(m => m.b, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.b, "", new { @class = "text-danger" })
            </div>
            <div class="row m-0 p-0">
                <button type="submit" class="col-5 btn btn-success rounded my-2">Tính toán</button>
                <div class="col-2"></div>
                <a href="/Math/Action2" class="col-5 btn btn-secondary rounded my-2">Làm mới</a>
            </div>
        </div>
    </form>

    <div class="form-group my-2">
        <label for="Price">Kết quả: @ketQua</label>
    </div>
</div>
