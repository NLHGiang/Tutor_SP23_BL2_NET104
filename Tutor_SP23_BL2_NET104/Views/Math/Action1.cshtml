<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

@using Buoi_2.Models;
BÀI 1

@model ModelForAction1

@{
    int ketQua = ViewBag.KetQua;
}

<div class="mx-3">
    <form class="row" action="~/Math/Action1">
        <div class="col-6">
            <div class="form-group my-2">
                <label for="Name">Số 1</label>
                @Html.TextBoxFor(m => m.So1, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.So1, "", new { @class = "text-danger" })
            </div>
            <div class="form-group my-2">
                <label for="Name">Số 2</label>
                @Html.TextBoxFor(m => m.So2, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.So2, "", new { @class = "text-danger" })
            </div>
            <div class="form-group my-2">
                <label for="Amount">Phép tính</label>
                @Html.TextBoxFor(m => m.PhepTinh, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.PhepTinh, "", new { @class = "text-danger" })
            </div>

            <div class="row m-0 p-0">
                <button type="submit" class="col-5 btn btn-success rounded my-2">Tính toán</button>
                <div class="col-2"></div>
                <a href="/Math/Action1" class="col-5 btn btn-secondary rounded my-2">Làm mới</a>
            </div>
        </div>
    </form>

    <div class="form-group my-2">
        <label for="Price">Kết quả: @ketQua</label>
    </div>
</div>
